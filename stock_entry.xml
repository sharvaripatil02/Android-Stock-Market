<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <TextView
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/StockSymbolText"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="213dp"
        android:id="@+id/CompanyNameText"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StockSymbolText"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textStyle="normal|italic"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_height="37dp" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:id="@+id/PriceText"
        app:layout_constraintLeft_toRightOf="@+id/StockSymbolText"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:id="@+id/arrow"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/PriceText"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Changed_diff"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintHorizontal_bias="0.66"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/PriceText"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/Changed_diff"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>